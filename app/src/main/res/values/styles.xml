<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="palette_selection">
        <attr name="palette" format="enum">
            <enum name="original" value="0" />
            <enum name="softColors" value="1" />
            <enum name="fashionColors" value="2" />
            <enum name="turboColors" value="3" />
            <enum name="blackAndWhite" value="4" />
        </attr>
    </declare-styleable>
</resources>
